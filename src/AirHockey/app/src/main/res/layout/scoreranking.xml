<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/scoreHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/score_ranking"
        style="@style/TextStyleHeader"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/datebankFuellen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DB Fuellen"
            android:onClick="datenbankTesten"/>

        <Button
            android:id="@+id/datenbankLeeren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DB leeren"
            android:onClick="datenbankLeeren"/>

    </LinearLayout>

    <TextView
        android:id="@+id/testtest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@android:id/list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>

</LinearLayout>